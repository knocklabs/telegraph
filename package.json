{
  "name": "@knocklabs/telegraph",
  "version": "0.0.1",
  "description": "The design system at Knock",
  "main": "index.js",
  "repository": "https://github.com/knocklabs/telegraph",
  "author": "@knocklabs",
  "license": "MIT",
  "private": true,
  "packageManager": "yarn@4.1.0",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "generate:package": "moon generate package",
    "dev:packages": "turbo dev --filter=\"./packages/*\" --concurrency=100",
    "dev:examples": "turbo dev:examples --filter=\"./examples/*\" --concurrency=100",
    "build:packages": "turbo build --filter=\"./packages/*\" --filter=\"!config\"",
    "build:config": "turbo build --filter=\"./packages/*-config\"",
    "build:relay": "turbo build:relay",
    "dev:relay": "turbo dev:relay",
    "start:relay": "turbo start:relay",
    "test": "vitest run --workspace=./vitest/workspace.ts",
    "test:watch": "vitest watch --workspace=./vitest/workspace.ts",
    "lint": "turbo lint",
    "format": "turbo format",
    "format:check": "turbo format:check",
    "dev:storybook": "storybook dev --port 3005",
    "build:storybook": "storybook build",
    "release": "yarn release:publish && yarn changeset tag",
    "release:publish": "yarn workspaces foreach -Rpt --no-private --from '@telegraph/*' npm publish --access public --tolerate-republish",
    "postinstall": "manypkg check",
    "prepare": "husky",
    "manypkg:check": "manypkg check",
    "manypkg:fix": "manypkg fix"
  },
  "workspaces": [
    "packages/*",
    "examples/*",
    "apps/*"
  ],
  "manypkg": {
    "defaultBranch": "main",
    "ignoredRules": [
      "INTERNAL_MISMATCH"
    ]
  },
  "devDependencies": {
    "@actions/core": "^1.11.1",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.27.7",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@manypkg/cli": "^0.25.1",
    "@moonrepo/cli": "^1.28.2",
    "@storybook/addon-links": "^9.1.3",
    "@storybook/addon-onboarding": "^9.1.15",
    "@storybook/addon-themes": "^9.1.3",
    "@storybook/icons": "^1.6.0",
    "@storybook/react": "^9.1.3",
    "@storybook/react-vite": "^9.1.7",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "eslint-plugin-turbo": "^2.0.12",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "postcss-import": "^16.1.1",
    "postcss-import-ext-glob": "^2.1.1",
    "prettier": "^3.6.2",
    "prop-types": "^15.8.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "storybook": "^9.1.10",
    "storybook-addon-render-modes": "^0.0.11",
    "turbo": "^1.11.3",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "3.2.4",
    "vitest-axe": "0.1.0"
  }
}
