{
  "name": "@telegraph/tailwind-config",
  "version": "0.0.8",
  "author": "@knocklabs",
  "license": "MIT",
  "repository": "https://github.com/knocklabs/telegraph/tree/main/packages/tailwind-config",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/default-config.es.js",
      "require": "./dist/default-config.cjs.js",
      "types": "./dist/default-config.d.ts"
    },
    "./default-config": {
      "import": "./dist/default-config.es.js",
      "require": "./dist/default-config.cjs.js",
      "types": "./dist/default-config.d.ts"
    },
    "./token-config": {
      "import": "./dist/token-config.es.js",
      "require": "./dist/token-config.cjs.js",
      "types": "./dist/token-config.d.ts"
    },
    "./scoped-config": {
      "import": "./dist/scoped-config.es.js",
      "require": "./dist/scoped-config.cjs.js",
      "types": "./dist/scoped-config.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "prettier": "@telegraph/prettier-config",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn clean && yarn build:esm && yarn build:cjs",
    "build:esm": "BUILD_TARGET=esm; tsc && vite build",
    "build:cjs": "BUILD_TARGET=cjs; tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier \"src/**/*.{js,ts,tsx}\" --write",
    "format:check": "prettier \"src/**/*.{js,ts,tsx}\" --check"
  },
  "devDependencies": {
    "@knocklabs/eslint-config": "^0.0.3",
    "@knocklabs/typescript-config": "^0.0.2",
    "@telegraph/prettier-config": "workspace:^",
    "@telegraph/tokens": "workspace:^",
    "@telegraph/vite-config": "workspace:^",
    "eslint": "^8.56.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  }
}
