{
  "name": "@telegraph/tailwind-config",
  "version": "0.0.2",
  "author": "@knocklabs",
  "license": "MIT",
  "repository": "https://github.com/knocklabs/telegraph/tree/main/packages/tailwind-config",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/style.css"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "prettier": "@telegraph/prettier-config",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn clean && tsc",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier \"src/**/*.{js,ts,tsx}\" --write",
    "format:check": "prettier \"src/**/*.{js,ts,tsx}\" --check"
  },
  "dependencies": {
    "tailwindcss": "^3.4.1"
  },
  "devDependencies": {
    "@knocklabs/eslint-config": "^0.0.3",
    "@knocklabs/typescript-config": "^0.0.2",
    "@telegraph/prettier-config": "workspace:^",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}
