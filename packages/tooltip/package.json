{
  "name": "@telegraph/tooltip",
  "version": "0.0.57",
  "description": "A simple tooltip component ",
  "repository": "https://github.com/knocklabs/telegraph/tree/main/packages/tooltip",
  "author": "@knocklabs",
  "license": "MIT",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.mjs",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.js",
      "default": "./dist/css/default.css"
    },
    "./default.css": "./dist/css/default.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "prettier": "@telegraph/prettier-config",
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "vite build --watch --emptyOutDir false",
    "build": "yarn clean && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier \"src/**/*.{js,ts,tsx}\" --write",
    "format:check": "prettier \"src/**/*.{js,ts,tsx}\" --check",
    "preview": "vite preview"
  },
  "dependencies": {
    "@radix-ui/react-tooltip": "^1.2.8",
    "@radix-ui/react-use-controllable-state": "^1.2.2",
    "@telegraph/appearance": "workspace:^",
    "@telegraph/helpers": "workspace:^",
    "@telegraph/layout": "workspace:^",
    "@telegraph/typography": "workspace:^",
    "motion": "^12.23.12"
  },
  "devDependencies": {
    "@knocklabs/eslint-config": "^0.0.5",
    "@knocklabs/typescript-config": "^0.0.2",
    "@telegraph/postcss-config": "workspace:^",
    "@telegraph/prettier-config": "workspace:^",
    "@telegraph/vite-config": "workspace:^",
    "@types/react": "^19.1.11",
    "eslint": "^8.56.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "^5.9.2",
    "vite": "^6.0.11"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  }
}
