{
  "name": "@telegraph/tokens",
  "version": "0.0.0",
  "author": "@knocklabs",
  "license": "MIT",
  "repository": "https://github.com/knocklabs/telegraph/tree/main/packages/tokens",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/default.css"
    },
    "./default": {
      "default": "./dist/default.css"
    },
    "./light": {
      "default": "./dist/light.css"
    },
    "./dark": {
      "default": "./dist/dark.css"
    },
    "./semantic": {
      "default": "./dist/semantic.css"
    },
    "./mappings/semantic": {
      "import": "./dist/mappings/semantic.json",
      "default": "./dist/mappings/semantic.json"
    },
    "./mappings/tokens": {
      "import": "./dist/mappings/tokens.json",
      "default": "./dist/mappings/tokens.json"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "prettier": "@telegraph/prettier-config",
  "scripts": {
    "clean": "rm -rf dist",
    "generate-css-file": "node ./scripts/generate-css-file.js ../dist/index.umd.js",
    "generate-css-var-map": "node ./scripts/generate-css-var-map.js ../dist/index.umd.js",
    "build": "yarn clean && yarn build:esm && yarn build:cjs && yarn generate-css-file && yarn generate-css-var-map",
    "build:esm": "BUILD_TARGET=esm; tsc && vite build",
    "build:cjs": "BUILD_TARGET=cjs; tsc && vite build"
  },
  "devDependencies": {
    "@knocklabs/eslint-config": "^0.0.3",
    "@knocklabs/typescript-config": "^0.0.2",
    "@telegraph/prettier-config": "workspace:^",
    "@telegraph/vite-config": "workspace:^",
    "eslint": "^8.56.0",
    "lightningcss": "^1.23.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  }
}
