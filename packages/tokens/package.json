{
  "name": "@telegraph/tokens",
  "version": "0.0.0",
  "author": "@knocklabs",
  "license": "MIT",
  "repository": "https://github.com/knocklabs/telegraph/tree/main/packages/tokens",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/default.css"
    },
    "./default": {
      "default": "./dist/default.css"
    },
    "./light": {
      "default": "./dist/light.css"
    },
    "./dark": {
      "default": "./dist/dark.css"
    },
    "./semantic": {
      "default": "./dist/semantic.css"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "prettier": "@telegraph/prettier-config",
  "scripts": {
    "clean": "rm -rf dist",
    "generate-css-file": "node ./scripts/generate-css-file.js ../dist/index.js",
    "build": "yarn clean && tsc && yarn generate-css-file"
  },
  "devDependencies": {
    "@knocklabs/eslint-config": "^0.0.3",
    "@knocklabs/typescript-config": "^0.0.2",
    "@telegraph/prettier-config": "workspace:^",
    "eslint": "^8.56.0",
    "lightningcss": "^1.23.0",
    "typescript": "^5.3.3"
  }
}
