{
  "name": "@telegraph/typography",
  "version": "0.0.1",
  "description": "Shared build utilities for Telegraph",
  "repository": "https://github.com/knocklabs/telegraph/tree/master/packages/typography",
  "author": "@knocklabs",
  "license": "MIT",
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/types/index.d.ts",
  "typings": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "default": "./dist/style.css"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "tsc && vite build --watch --emptyOutDir false",
    "build": "yarn clean && yarn build:esm && yarn build:cjs",
    "build:esm": "export BUILD_TARGET=esm; tsc && vite build",
    "build:cjs": "export BUILD_TARGET=cjs; tsc && vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@knocklabs/typescript-config": "^0.0.2",
    "@telegraph/core": "*",
    "@telegraph/postcss-config": "*",
    "@telegraph/tailwind-config": "*",
    "@telegraph/vite-config": "*",
    "@telegraph/vitest-config": "*",
    "@types/react": "^18.2.48",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
