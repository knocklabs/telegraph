{
  "name": "@telegraph/nextjs",
  "version": "0.0.1",
  "description": "Utility for utilizing telegraph components in Nextjs",
  "repository": "https://github.com/knocklabs/telegraph/tree/main/packages/nextjs",
  "author": "@knocklabs",
  "license": "MIT",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "default": "./dist/index.js"
    },
    "./loader": {
      "import": "./dist/use-client-loader.js",
      "default": "./dist/use-client-loader.js"
    }
  },
  "prettier": "@knocklabs/prettier-config",
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "tsc && vite build --watch --emptyOutDir false && yarn use-client-loader-copy",
    "use-client-loader-copy": "cp src/use-client-loader.js dist/use-client-loader.js",
    "build": "yarn clean && yarn build:esm && yarn build:cjs && yarn use-client-loader-copy",
    "build:esm": "BUILD_TARGET=esm; tsc && vite build",
    "build:cjs": "BUILD_TARGET=cjs; tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier \"src/**/*.{js,ts,tsx}\" --write",
    "format:check": "prettier \"src/**/*.{js,ts,tsx}\" --check",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@knocklabs/eslint-config": "^0.0.3",
    "@knocklabs/prettier-config": "^0.0.1",
    "@knocklabs/typescript-config": "^0.0.2",
    "@telegraph/vite-config": "workspace:^",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  }
}
