{
  "name": "@telegraph/core",
  "version": "0.0.1",
  "repository": "https://github.com/knocklabs/telegraph/tree/master/packages/core",
  "author": "@knocklabs",
  "license": "MIT",
  "exports": {
    ".": {
      "default": "./dist/style.css"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "tsc && vite build --watch --emptyOutDir false",
    "build": "yarn clean && yarn build:esm && yarn build:cjs",
    "build:esm": "export BUILD_TARGET=esm; tsc && vite build",
    "build:cjs": "export BUILD_TARGET=cjs; tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@knocklabs/eslint-config": "^0.0.3",
    "@knocklabs/typescript-config": "^0.0.2",
    "@telegraph/postcss-config": "*",
    "@telegraph/tailwind-config": "*",
    "@telegraph/vite-config": "*"
  }
}
